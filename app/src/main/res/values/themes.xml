<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ReminderNotes" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/gray</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="overlapAnchor">false</item>
    </style>

    <!-- ScrollView Style. -->
    <style name="scrollStyle">
        <item name="android:color">@color/purple_500</item>
        <item name="colorAccent">@color/purple_500</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_500</item>
    </style>

    <!-- PickerDialog Style. -->
    <style name="pickerDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/violet</item>
    </style>

    <!-- AlertDialog Style -->
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/purple_500</item>
    </style>

</resources>
